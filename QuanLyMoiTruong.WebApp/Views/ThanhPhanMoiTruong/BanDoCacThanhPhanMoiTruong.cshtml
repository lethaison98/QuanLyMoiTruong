@using Microsoft.Extensions.Configuration
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Home Page";
}

<div class="pagetitle">
    <h1>Bản đồ các thành phần môi trường</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Bản đồ các thành phần môi trường</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section bandocacthanhphanmoitruong">
    <div class="row">
        <div class="col-lg-8">
            <div id="mapid" style="height: 600px;"></div>
            <div class="card">
                <div class="card-body">
                    <div class="activity">
                        <br />
                        <div class="activity-item d-flex">
                            <div class="activity-content px-3">
                                <i class='bi bi-circle-fill activity-badge text-warning align-self-start'></i>
                                Điểm thoát nước
                            </div>
                            <div class="activity-content px-3">
                                <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                                Điểm quan trắc không khí
                            </div>
                            <div class="activity-content px-3">
                                <i class='bi bi-circle-fill activity-badge text-danger align-self-start'></i>
                                Điểm quan trắc nước ngầm
                            </div>
                            <div class="activity-content px-3">
                                <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                                Điểm quan trắc nước biển
                            </div>
                            <div class="activity-content px-3">
                                <i class='bi bi-circle-fill activity-badge text-info align-self-start'></i>
                                Điểm quan trắc nước mặt
                            </div>
                        </div><!-- End activity item-->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card recent-sales overflow-auto" style="max-height: 600px">
                <div class="card-body">
                    <h5 class="card-title">Lựa chọn thời điểm hiển thị </h5>
                    <div>
                        <div>
                            <select class="form-control select2 ddThanhPhanMoiTruong" data-name="IdThanhPhanMoiTruong" style="width: 100%;">
                            </select>
                        </div>
                    </div>

                </div>

            </div>
            <div class="card recent-sales overflow-auto" style="max-height: 540px">
                <div class="card-body">
                    <h5 class="card-title">Danh sách các điểm quan trắc </h5>
                    <div>
                        <div>
                            <table class="table table-striped table-bordered" id="tbl-dsDiemQuanTrac">
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

