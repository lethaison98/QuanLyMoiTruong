@using Microsoft.Extensions.Configuration
@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Home Page";
}

<div class="pagetitle">
    <h1>Sơ đồ các điểm lấy mẫu quan trắc của KKT</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Sơ đồ các điểm lấy mẫu quan trắc của KKT</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="card">
    <div class="card-body">
        <!-- Bordered Tabs -->
        <ul class="nav nav-tabs nav-tabs-bordered" id="borderedTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="BanDoDiemQuanTrac-tab" data-bs-toggle="tab" data-bs-target="#bordered-BanDoDiemQuanTrac" type="button" role="tab" aria-controls="BanDoDiemQuanTrac" aria-selected="false" tabindex="-1">Sơ đồ điểm lấy mẫu quan trắc</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="DanhSachDiemQuanTrac-tab" data-bs-toggle="tab" data-bs-target="#bordered-DanhSachDiemQuanTrac" type="button" role="tab" aria-controls="DanhSachDiemQuanTrac" aria-selected="false" tabindex="-1">Danh sách điểm lấy mẫu quan trắc</button>
            </li>
        </ul>
        <div class="tab-content profile pt-2" id="borderedTabContent">
            <div class="tab-pane profile-overview fade active show" id="bordered-BanDoDiemQuanTrac" role="tabpanel" aria-labelledby="BanDoDiemQuanTrac-tab">
                <div class="row">
                    <div class="col-lg-9">
                        <div id="mapid" style="height: 600px;"></div>
                        <div class="card">
                            <div class="card-body">
                                <div class="activity">
                                    <br />
                                    <div class="activity-item d-flex">
                                        @*                            <div class="activity-content px-3">
                                            <i class='bi bi-circle-fill activity-badge text-warning align-self-start'></i>
                                            Điểm thoát nước
                                            </div>*@
                                        <div class="activity-content px-3">
                                            <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                                            Điểm quan trắc không khí
                                        </div>
                                        <div class="activity-content px-3">
                                            <i class='bi bi-circle-fill activity-badge text-danger align-self-start'></i>
                                            Điểm quan trắc nước ngầm
                                        </div>
                                        <div class="activity-content px-3">
                                            <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                                            Điểm quan trắc nước biển
                                        </div>
                                        <div class="activity-content px-3">
                                            <i class='bi bi-circle-fill activity-badge text-info align-self-start'></i>
                                            Điểm quan trắc nước mặt
                                        </div>
                                    </div><!-- End activity item-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card recent-sales overflow-auto" style="max-height: 600px">
                            <div class="card-body">
                                <h5 class="card-title">Lựa chọn thời điểm hiển thị </h5>
                                <div>
                                    <div>
                                        <select class="form-control select2 ddThanhPhanMoiTruong" data-name="IdThanhPhanMoiTruong" style="width: 100%;">
                                        </select>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="card recent-sales overflow-auto" style="max-height: 540px">
                            <div class="card-body">
                                <h5 class="card-title">Danh sách các điểm quan trắc </h5>
                                <div>
                                    <div>
                                        <table class="table table-striped table-bordered" id="tbl-dsDiemQuanTrac">
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>


            </div>
            <div class="tab-pane fade" id="bordered-DanhSachDiemQuanTrac" role="tabpanel" aria-labelledby="DanhSachDiemQuanTrac-tab">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Tìm kiếm</h5>
                                <div class="row">
                                    <div class="col-6 col-md-6 col-lg-6 col-xl-8">
                                        <div class="ttls-cm">
                                            <div class="ttls-content">
                                                <input type="text" id="txtKEY_WORD" placeholder="Nhập từ khóa tìm kiếm..." class="form-control" data-name="Keyword" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6 col-md-6 col-lg-6 col-xl-4">
                                        <div class="ttls-cm">
                                            <div class="ttls-content">
                                                <a class="btn btn-sm btn-primary waves-effect waves-light" id="btnSearchDiemQuanTrac">
                                                    <span>Tra cứu</span>
                                                    <i class="fas fa-search"></i>
                                                </a>
                                                <a class="btn btn-sm btn-success waves-effect waves-light" id="btnCreateDiemQuanTrac">
                                                    <span>Tạo mới</span>
                                                    <i class="fas fa-plus"></i>
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Danh sách Điểm quan trắc</h4>
                                <table id="tbl" class="table table-bordered table-hover table-striped" style="width: 100%">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%">STT</th>
                                            <th>Tên điểm</th>
                                            <th>Địa chỉ</th>
                                            <th>Kinh độ</th>
                                            <th>Vĩ độ</th>
                                            <th>Loại</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- End Bordered Tabs -->

    </div>
</div>
<section class="section">
</section>
@await Html.PartialAsync("_PopupFormDiemQuanTrac.cshtml")

