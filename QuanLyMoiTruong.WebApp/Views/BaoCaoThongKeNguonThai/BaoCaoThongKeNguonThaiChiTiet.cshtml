@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<div class="pagetitle">
    <h1>Báo cáo thống kê nguồn thải chi tiết</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/DuAn">Báo cáo thống kê nguồn thải</a></li>
            <li class="breadcrumb-item active">Báo cáo thống kê nguồn thải chi tiết</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card profile">
            <div class="card-body profile-overview">
                <h5 class="card-title ">Chi tiết báo cáo</h5>
                <div class="" id="thong-tin-tpmt">
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card profile">
            <div class="card-body profile-overview">
                <h5 class="card-title ">Dữ liệu thống kê nguồn thải</h5>
                <div class="" id="thong-tin-tpmt">
                </div>
                <table class="table table-bordered table-hover table-striped" style="width: 100%">
                    <thead>
                        <tr>
                            <th style="width: 5%" rowspan="3">STT</th>
                            <th style="width: 15%" rowspan="3">Chủ đầu tư</th>
                            <th colspan="3">Nước thải(m3/ngày)</th>
                            <th rowspan="3">Lưu lượng đấu nối</th>
                            <th rowspan="3">Khí thải (m3/giờ)</th>
                            <th colspan="4">Chất thải rắn (kg/ngày)</th>
                            <th rowspan="3">CTNH</th>
                        </tr>
                        <tr>
                            <th rowspan="2">Nước thải sinh hoạt</th>
                            <th rowspan="2">Nước thải sản xuất</th>
                            <th rowspan="2">Tái sử dụng</th>
                            <th rowspan="2">Chất thải rắn sinh hoạt</th>
                            <th colspan="2">Chất thải rắn</th>
                            <th rowspan="2">Tổng</th>
                        </tr>
                        <tr>
                            <th>Sử dụng trực tiếp</th>
                            <th>Tái sử dụng</th>
                        </tr>
                    </thead>
                    <tbody id="danh-sach-ket-qua-thong-ke-nguon-thai">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script src="~/js/controller/BaoCaoThongKeNguonThaiChiTietControl.js"></script>
}