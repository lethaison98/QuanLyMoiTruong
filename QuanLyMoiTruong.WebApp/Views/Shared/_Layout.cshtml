    <script src="~/js/site.js"></script>
    <script src="~/lib/treeview/sample.js"></script>

    <script src="~/lib/treeview/dx.all.js"></script>

    <script>
        const API_URL = @Json.Serialize(@Configuration.GetSection("BaseAddress").Value);
        if ('@Context.Session.GetString("AccessToken")' == '') {
            window.location.href = "/User/Logout";
        }
        window.localStorage.setItem('API_URL', API_URL);
        window.localStorage.setItem('ACCESS_TOKEN', '@Context.Session.GetString("AccessToken")');
        window.localStorage.setItem('FullName', '@Context.Session.GetString("FullName")');
        window.localStorage.setItem('UserName', '@Context.Session.GetString("UserName")');
        window.localStorage.setItem('Roles', '@Context.Session.GetString("Roles")');

        $('#Logout').off('click').on('click', function () {
            var result = confirm("Bạn chắc chắn muốn Đăng xuất hệ thống?");
            if (result) {
                localStorage.clear();
                window.location.href =  "/User/Logout";
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
