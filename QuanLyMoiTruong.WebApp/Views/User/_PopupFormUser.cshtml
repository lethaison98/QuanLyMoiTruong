@{
    Layout = null;
}
<div class="modal fade" id="popup-form-user" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm mới người dùng</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="min-height:600px">
                <div class="row g-3" id="FormUser">
                    <div class="col-6">
                        <label>Họ và tên<span class="required">*</span></label>
                        <div class="ttls-content">
                            <input type="hidden" class="form-control" data-name="IdUser" value="00000000-0000-0000-0000-000000000000">
                            <input type="text" class="form-control" data-name="FullName" required>
                        </div>
                    </div>
                    <div class="col-6">
                        <label>Tài khoản<span class="required">*</span></label>
                        <div class="ttls-content">
                            <input type="text" class="form-control" required="" data-name="UserName">
                        </div>
                    </div>
                    <div class="col-6">
                        <label>Mật khẩu</label>
                        <div class="ttls-content">
                            <input type="text" class="form-control"  data-name="Password">
                        </div>
                    </div>
                    <div class="col-6">
                        <label>Nhập lại mật khẩu</label>
                        <div class="ttls-content">
                            <input type="text" class="form-control" data-name="ReNewPassword">
                        </div>
                    </div>
                    <div class="col-6">
                        <label>Email</label>
                        <div class="ttls-content">
                            <input type="text" class="form-control" data-name="Email">
                        </div>
                    </div>
                    
                    <div class="col-6">
                        <label>Số điện thoại</label>
                        <div class="ttls-content">
                            <input type="text" class="form-control" data-name="PhoneNumber">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveUser">Lưu</button>
                <button type="button" class="btn btn-danger" id="btnCloseUser" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>