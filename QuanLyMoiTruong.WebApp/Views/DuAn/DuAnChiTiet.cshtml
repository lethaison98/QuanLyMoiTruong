<div class="pagetitle">
    <h1>Chi tiết dự án</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/DuAn">Dự án</a></li>
            <li class="breadcrumb-item active">Chi tiết dự án</li>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-body">
        <!-- Bordered Tabs -->
        <ul class="nav nav-tabs nav-tabs-bordered" id="borderedTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="GiayPhepMoiTruong-tab" data-bs-toggle="tab" data-bs-target="#bordered-GiayPhepMoiTruong" type="button" role="tab" aria-controls="GiayPhepMoiTruong" aria-selected="false" tabindex="-1">Hồ sơ cấp Giấy phép môi trường</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="BaoCaoBaoVeMoiTruongHangNam-tab" data-bs-toggle="tab" data-bs-target="#bordered-BaoCaoBaoVeMoiTruongHangNam" type="button" role="tab" aria-controls="BaoCaoBaoVeMoiTruongHangNam" aria-selected="true">Báo cáo công tác BVMT hàng năm</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="HoSoKiemTraXuPhat-tab" data-bs-toggle="tab" data-bs-target="#bordered-HoSoKiemTraXuPhat" type="button" role="tab" aria-controls="HoSoKiemTraXuPhat" aria-selected="false" tabindex="-1">Hồ sơ thanh, kiểm tra công tác bảo vệ môi trường</button>
            </li>
        </ul>
        <div class="tab-content pt-2" id="borderedTabContent">
            <div class="tab-pane fade active show" id="bordered-GiayPhepMoiTruong" role="tabpanel" aria-labelledby="GiayPhepMoiTruong-tab">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Giấy phép môi trường <button type="button" class="btn btn-success offset-md-3" style="float:right" id="btnCreateGiayPhepMoiTruong"><i class="fas fa-plus"></i> Tạo mới</button></h5>
                                <div class="accordion" id="accordion-GiayPhepMoiTruong">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="bordered-BaoCaoBaoVeMoiTruongHangNam" role="tabpanel" aria-labelledby="BaoCaoBaoVeMoiTruongHangNam-tab">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Báo cáo bảo vệ môi trường hàng năm <button type="button" class="btn btn-success offset-md-3" style="float:right" id="btnCreateBaoCaoBaoVeMoiTruongHangNam"><i class="fas fa-plus"></i> Tạo mới</button>
                                </h5>
                                <div class="accordion" id="accordion-BaoCaoBaoVeMoiTruongHangNam">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="bordered-HoSoKiemTraXuPhat" role="tabpanel" aria-labelledby="HoSoKiemTraXuPhat-tab">
                Saepe animi et soluta ad odit soluta sunt. Nihil quos omnis animi debitis cumque. Accusantium quibusdam perspiciatis qui qui omnis magnam. Officiis accusamus impedit molestias nostrum veniam. Qui amet ipsum iure. Dignissimos fuga tempore dolor.
            </div>
        </div><!-- End Bordered Tabs -->

    </div>
</div>

@await Html.PartialAsync("_PopupFormGiayPhepMoiTruong.cshtml")
@await Html.PartialAsync("_PopupFormBaoCaoBaoVeMoiTruongHangNam.cshtml")
@section Scripts{
<script src="~/js/controller/DuAnChiTietControl.js"></script>
<script src="~/js/controller/GiayPhepMoiTruongControl.js"></script>
<script src="~/js/controller/BaoCaoBaoVeMoiTruongHangNamControl.js"></script>
}